<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingVertical="8dp">

    <ImageButton
        android:id="@+id/ibPrincipal"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:minHeight="48dp"           android:background="@android:color/transparent"
        android:contentDescription="@string/icono_pantalla_principal"
        android:src="@drawable/iconocasa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibBuscar"
        app:layout_constraintHorizontal_chainStyle="spread_inside" />

    <ImageButton
        android:id="@+id/ibBuscar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"           android:background="@android:color/transparent"
        android:contentDescription="@string/icono_buscar"
        android:src="@drawable/iconocasa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ibPrincipal"
        app:layout_constraintEnd_toStartOf="@+id/ibFavoritos" />

    <ImageButton
        android:id="@+id/ibFavoritos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"           android:background="@android:color/transparent"
        android:contentDescription="@string/icono_favoritos"
        android:src="@drawable/iconocasa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ibBuscar"
        app:layout_constraintEnd_toStartOf="@+id/ibAjustes" />

    <ImageButton
        android:id="@+id/ibAjustes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"           android:background="@android:color/transparent"
        android:contentDescription="@string/icono_ajustes"
        android:src="@drawable/iconocasa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ibFavoritos"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>